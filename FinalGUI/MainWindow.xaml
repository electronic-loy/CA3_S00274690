<Window x:Class="FinalGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking System" Height="500" Width="800"
        Loaded="Window_Loaded">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <!-- Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Search Button -->
            <RowDefinition Height="*"/>
            <!-- Results + Details -->
        </Grid.RowDefinitions>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Choose a category:" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbCategory" Width="150" Margin="0,0,10,0"
                      SelectionChanged="cmbCategory_SelectionChanged" />
            <Label Content="From:" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpStart" Width="150" Margin="5,0"/>
            <Label Content="To:" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpEnd" Width="150" Margin="5,0"/>
        </StackPanel>

        <!-- Search Button -->
        <Button Grid.Row="1" Content="Search" Width="100" Height="30"
                HorizontalAlignment="Left" Click="btnSearch_Click"/>

        <!-- Results and Details -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- List of Available Items -->
            <ListBox x:Name="lstItems" Grid.Column="0" Margin="0,0,10,0"
                     SelectionChanged="lstItems_SelectionChanged" />

            <!-- Item Details and Book Button -->
            <StackPanel Grid.Column="1">
                <TextBlock x:Name="txtDetails" TextWrapping="Wrap" 
                           Margin="0,0,0,10" FontSize="14"/>
                <Button x:Name="btnBook" Content="Book" Width="64" Height="auto"
                        Click="btnBook_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
